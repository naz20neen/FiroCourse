@model dynamic 
@{
    ViewData["Title"] = "Contact Us";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="contact-section py-5" style="background-color: #72adf226">
    <div class="container">
        <div class="text-center mb-5">
            <h2 class="fw-bold">Contact Us</h2>
            <p class="text-secondary">Find our location and reach out to us anytime.</p>
        </div>

        <div class="row g-4">
            <!-- Contact Info -->
            <div class="col-md-4">
                <div class="contact-info p-4 rounded-4 bg-white shadow-sm h-100 border border-light">
                    <h5 class="fw-bold mb-4">Our Information</h5>
                    @if(Model.Address !=null && Model.Address.Count > 0)
                    {
                        foreach (var item in Model.Address)
                        {
                         <p class="d-flex align-items-center mb-3">
                            <i class="bi bi-geo-alt-fill me-3 text-primary fs-5"></i>
                            @item
                         </p>
                        }
                    }
                    

                   @if(Model.Phone !=null && Model.Phone.Count > 0)
                    {
                        foreach (var item in Model.Phone)
                        {
                         <p class="d-flex align-items-center mb-3">
                            <i class="bi bi-telephone-fill me-3 text-primary fs-5"></i>
                            @item
                         </p>
                        }
                    }

                     @if(Model.Email !=null && Model.Email.Count > 0)
                     {
                        foreach (var item in Model.Email)
                        {
                         <p class="d-flex align-items-center mb-3">
                            <i class="bi bi-envelope-fill me-3 text-primary fs-5"></i>
                            @item
                         </p>
                        }
                     }


                      @if(Model.OfficeHour !=null && Model.OfficeHour.Count > 0)
                     {
                        foreach (var item in Model.OfficeHour)
                        {
                         <p class="d-flex align-items-center mb-3">
                            <i class="bi bi-clock-fill me-3 text-primary fs-5"></i>
                            @item
                         </p>
                        }
                     } 

                </div>
            </div>


            <!-- Google Map -->
            <div class="col-md-8">
                <div class="map-container shadow rounded-4 overflow-hidden h-100">
                    @if (Model.Map != null)
                    {
                        <iframe src="@Model.Map"
                        width="100%"
                        height="100%"
                        style="border:0; min-height:400px;"
                        allowfullscreen=""
                        loading="lazy"
                        referrerpolicy="no-referrer-when-downgrade">
                        </iframe>
                    }
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    .contact-section {
        background: #f8f9fa;
    }

    .contact-info p {
        margin-bottom: 0.75rem;
        color: #495057;
    }

    .contact-info i {
        color: var(--main-color, #007bff);
    }

    .map-container iframe {
        border: 0;
        border-radius: 0.5rem;
    }
</style>
