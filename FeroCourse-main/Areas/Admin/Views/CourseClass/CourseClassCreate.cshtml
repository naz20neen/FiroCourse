@using FeroCourse.Data.Dtos

@model CourseClassVM

@{
    ViewData["Title"] = "Class";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-sm-12">
    <div class="card">
        <div class="card-header">
            <h5>Class Create</h5>
            <h3>@ViewBag.CourseTitle</h3>
        </div>

        <div class="card-body table-border-style">
            <form asp-area="Admin" asp-controller="CourseClass" asp-action="CourseClassCreate" method="post">

                <div class="row mb-3">
                    <div class="col-md-12">
                        <label>Class Title</label>
                        <input type="text" class="form-control" asp-for="ClassTitle" />
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-12">
                        <label>Class Description</label>
                        <input type="text" class="form-control" asp-for="Description" />
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label>Video Link</label>
                        <input type="text" class="form-control" asp-for="VideoUrl" />
                    </div>
                    <div class="col-md-6">
                        <label>Document Link</label>
                        <input type="text" class="form-control" asp-for="DocumentUrl" />
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label>Duration</label>
                        <input type="text" class="form-control" asp-for="Duration" />
                    </div>

                    <div class="col-md-6">
                        <label>Order N0.</label>
                        <input type="number" class="form-control" asp-for="OrderNo" />
                     </div>
                </div>
                <div class="row mb-3">

                    <div class="col-md-6 mt-3">
                        <div class="form-check">
                            <input type="checkbox" class="form-check-input" asp-for="IsFreePreview" />
                            <label class="form-check-label" asp-for="IsFreePreview">Preview</label>
                        </div>
                    </div>

                    <div class="col-md-6 mt-3">
                        <div class="form-check">
                            <input type="checkbox" class="form-check-input" asp-for="IsPublished" />
                            <label class="form-check-label" asp-for="IsPublished">Published</label>
                        </div>
                    </div>

                </div>


                <div class="row mt-3">
                    <div class="col-sm-4">
                        <button type="submit" class="btn btn-primary">Create</button>
                    </div>
                </div>

            </form>
        </div>
    </div>
</div>
