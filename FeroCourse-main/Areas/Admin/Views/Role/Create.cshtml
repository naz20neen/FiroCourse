@{
    ViewData["Title"] = "Role Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


@{
    if (TempData["Message"] != null)
    {
        <div class="alert @TempData["Type"]" role="alert">
            @TempData["Message"]
        </div>
    }
}


<div class="col-sm-12">
    <div class="card">
        <div class="card-header">
            <h5>Role Create</h5>
        </div>
        <div class="card-body">
            <form asp-action="Create" asp-controller="Role" asp-area="Admin" method="post">

                <div class="col-sm-4">
                    <div class="form-group">
                        <label class="floating-label" for="roleName">Role Name</label>
                        <input type="text" class="form-control" name="roleName" id="roleName">
                    </div>
                </div>

                <div class="col-sm-4">
                    <div class="form-group">
                        <label class="floating-label"></label>
                        <button type="submit" class="btn  btn-primary">Submit</button>
                    </div>
                </div>

            </form>
        </div>
    </div>
</div>