@page
@model ForgotPasswordConfirmation
@{
    ViewData["Title"] = "Forgot Password Confirmation";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="auth-section d-flex align-items-center justify-content-center">
    <div class="auth-box shadow rounded-4 p-4 p-md-5 bg-white text-center" style="max-width: 450px; width: 100%;">
        <div class="mb-4">
            <h3 class="fw-bold text-dark mb-2">@ViewData["Title"]</h3>
            <p class="text-secondary mb-0">We've sent a password reset link to your email. Please check your inbox.</p>
        </div>

        <a asp-page="./Login" class="btn btn-main w-100 py-2 fw-semibold mt-3">Back to Login</a>
    </div>
</section>

<style>
    .auth-section {
        min-height: calc(100vh - 120px);
        background: #f8f9fa;
    }

    .auth-box .btn-main {
        background: var(--main-color, #007bff);
        color: #fff;
        transition: all 0.3s ease;
    }

        .auth-box .btn-main:hover {
            background: #0056b3;
        }

    .text-main {
        color: var(--main-color, #007bff);
    }
</style>
