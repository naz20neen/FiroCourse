@page
@model LoginModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="auth-section d-flex align-items-center justify-content-center">
    <div class="auth-box shadow rounded-4 p-4 p-md-5 bg-white" style="max-width: 450px; width: 100%;">
        <div class="text-center mb-4">
            <h3 class="fw-bold text-dark mb-2">Welcome Back</h3>
            <p class="text-secondary mb-0">Login to continue your learning journey</p>
        </div>

        <form id="account" method="post" class="needs-validation" novalidate>
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control" placeholder="name@example.com" autocomplete="username" required />
                <label asp-for="Input.Email">Email address</label>
                <span asp-validation-for="Input.Email" class="text-danger small"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Input.Password" class="form-control" type="password" placeholder="Password" autocomplete="current-password" required />
                <label asp-for="Input.Password">Password</label>
                <span asp-validation-for="Input.Password" class="text-danger small"></span>
            </div>

            <div class="d-flex justify-content-between align-items-center mb-3">
                <div class="form-check">
                    <input class="form-check-input" asp-for="Input.RememberMe" />
                    <label class="form-check-label" asp-for="Input.RememberMe">Remember me</label>
                </div>
                <a id="forgot-password" asp-page="./ForgotPassword" class="text-decoration-none text-main small">Forgot Password?</a>
            </div>

            <button id="login-submit" type="submit" class="btn btn-main w-100 py-2 fw-semibold">Login</button>

            <div class="text-center mt-3">
                <p class="small mb-0">
                    Don't have an account?
                    <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="text-main fw-semibold">Register</a>
                </p>
            </div>

            @if ((Model.ExternalLogins?.Count ?? 0) > 0)
            {
                <hr class="my-4" />
                <div class="text-center mb-2 small text-muted">Or continue with</div>
                <div class="d-flex justify-content-center gap-2">
                    @foreach (var provider in Model.ExternalLogins!)
                    {
                        <button type="submit" class="btn btn-outline-secondary btn-sm px-3" name="provider" value="@provider.Name">
                            <i class="bi bi-@provider.Name.ToLower() me-1"></i> @provider.DisplayName
                        </button>
                    }
                </div>
            }
        </form>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    .auth-section {
        min-height: calc(100vh - 120px);
        background: #f8f9fa;
    }

    .auth-box .btn-main {
        background: var(--main-color, #007bff);
        color: #fff;
        transition: all 0.3s ease;
    }

        .auth-box .btn-main:hover {
            background: #0056b3;
        }

    .text-main {
        color: var(--main-color, #007bff);
    }
</style>
