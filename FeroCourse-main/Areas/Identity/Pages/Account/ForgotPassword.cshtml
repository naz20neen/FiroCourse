@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="auth-section d-flex align-items-center justify-content-center">
    <div class="auth-box shadow rounded-4 p-4 p-md-5 bg-white" style="max-width: 450px; width: 100%;">
        <div class="text-center mb-4">
            <h3 class="fw-bold text-dark mb-2">@ViewData["Title"]</h3>
            <p class="text-secondary mb-0">Enter your email to reset your password</p>
        </div>

        <form method="post" class="needs-validation" novalidate>
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control" placeholder="name@example.com" autocomplete="username" required />
                <label asp-for="Input.Email">Email address</label>
                <span asp-validation-for="Input.Email" class="text-danger small"></span>
            </div>

            <button type="submit" class="btn btn-main w-100 py-2 fw-semibold">Reset Password</button>

            <div class="text-center mt-3">
                <p class="small mb-0">
                    Remember your password?
                    <a asp-page="./Login" class="text-main fw-semibold">Login</a>
                </p>
            </div>
        </form>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    .auth-section {
        min-height: calc(100vh - 120px);
        background: #f8f9fa;
    }

    .auth-box .btn-main {
        background: var(--main-color, #007bff);
        color: #fff;
        transition: all 0.3s ease;
    }

        .auth-box .btn-main:hover {
            background: #0056b3;
        }

    .text-main {
        color: var(--main-color, #007bff);
    }
</style>
